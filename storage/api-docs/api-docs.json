{
    "openapi": "3.0.0",
    "info": {
        "title": "Real-Time Chat API",
        "description": "API for a real-time chat system",
        "version": "1.0.0"
    },
    "paths": {
        "/api/chat/send": {
            "post": {
                "tags": [
                    "Chat"
                ],
                "summary": "Send a message",
                "operationId": "eff400320360edca81cd6e734d3bc771",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "receiver_id": {
                                        "type": "integer",
                                        "example": 2
                                    },
                                    "message": {
                                        "type": "string",
                                        "example": "Hello, how are you?"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Message sent successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "sender_id": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "receiver_id": {
                                            "type": "integer",
                                            "example": 2
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Hello, how are you?"
                                        },
                                        "status": {
                                            "type": "string",
                                            "example": "Sent"
                                        },
                                        "created_at": {
                                            "type": "string",
                                            "example": "2024-03-26T12:00:00Z"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "400": {
                        "description": "Validation error"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/chat/messages/{user_id}": {
            "get": {
                "tags": [
                    "Chat"
                ],
                "summary": "Retrieve paginated messages for a user",
                "operationId": "1866bdb76f39ebf30644a97b0cf8d5e2",
                "parameters": [
                    {
                        "name": "user_id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of messages",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "id": {
                                                        "type": "integer",
                                                        "example": 1
                                                    },
                                                    "sender_id": {
                                                        "type": "integer",
                                                        "example": 1
                                                    },
                                                    "receiver_id": {
                                                        "type": "integer",
                                                        "example": 2
                                                    },
                                                    "message": {
                                                        "type": "string",
                                                        "example": "Hello, how are you?"
                                                    },
                                                    "status": {
                                                        "type": "string",
                                                        "example": "Sent"
                                                    },
                                                    "created_at": {
                                                        "type": "string",
                                                        "example": "2024-03-26T12:00:00Z"
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        },
                                        "meta": {
                                            "properties": {
                                                "current_page": {
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "total": {
                                                    "type": "integer",
                                                    "example": 20
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/chat/read/{message_id}": {
            "patch": {
                "tags": [
                    "Chat"
                ],
                "summary": "Mark a message as read",
                "operationId": "85a3944a887b9903f36135a32ed14753",
                "parameters": [
                    {
                        "name": "message_id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Message marked as read"
                    },
                    "403": {
                        "description": "Unauthorized"
                    },
                    "404": {
                        "description": "Message not found"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Chat",
            "description": "Chat"
        }
    ]
}